<div id="game">
    <div id="jsapp"></div>
    <div id="screensUi">
        <div id="ship-building-screen">
            <div id="top-panel">
                Name: <input id="ship-name" type="text" value="{{shipName}}"/>
                Tier: <input id="ship-tier" type="text" value="{{shipTier}}"/>
                <button class="button" id="file_save">Save</button>
            </div>
            <div id="itemboard">
                <div id="items">
                    <div class="item">
                        <img id="item_Weapon" src="/_common/img/render/weapon_01.png" width="64px" height="43px" style="background-color:#000000" />
                        <span>Weapon</span>
                    </div>

                    <div class="item" >
                        <img id="item_Engine" src="/_common/img/render/engine_01.png" width="64px" height="43px" style="background-color:#000000" />
                        <span>Engine</span>
                    </div>

                    <div class="item" >
                        <img id="item_Power" src="/_common/img/render/power_01.png" width="43px" height="43px" style="background-color:#000000" />
                        <span>Power</span>
                    </div>

                    <div class="item">
                        <img id="item_Console" src="/_common/img/render/console_02.png" width="43px" height="43px" style="background-color:#000000"/>
                        <span>Console</span>
                    </div>

                    <div class="item">
                        <img id="item_Teleporter" src="/_common/img/render/teleporter.png" width="43px" height="43px" style="background-color:#000000"/>
                        <span>Teleporter</span>
                    </div>

                    <div class="item">
                        <img id="item_Component" src="/_common/img/render/components_02.png" width="43px" height="43px" style="background-color:#000000"/>
                        <span>Component</span>
                    </div>

                    <div class="item">
                        <img id="item_Door" src="/_common/img/render/door_02.png" width="64px" height="43px" style="background-color:#000000"/>
                        <span>Door</span>
                    </div>

                    <div class="item">
                        <img id="item_Wall" src="/_common/img/render/wall_02.png" width="43px" height="43px" style="background-color:#000000"/>
                        <span>Wall</span>
                    </div>

                    <div class="item">
                        <img id="item_WeakSpot" src="/_common/img/render/weakspot.png" width="43px" height="43px" style="background-color:#000000"/>
                        <span>Weak Spot</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/_common/vendor/jquery-1.9.1.js"></script>
<script type="text/javascript" src="/_common/vendor/melonJS-0.9.5.js"></script>
<script type="text/javascript" src="/_common/vendor/knockout-3.1.0.debug.js"></script>
<script type="text/javascript" src="/_common/vendor/knockout.mapping-latest.debug.js"></script>

<script type="text/javascript">
    window.bootstrapped = {{{bootstrapped}}};
    bootstrapped.shipJson = JSON.parse(bootstrapped.shipJson);
    //Because Ship needs a global object "hullMaps"
    window.hullMaps = bootstrapped.hullMaps;
</script>

